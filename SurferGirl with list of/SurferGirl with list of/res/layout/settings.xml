<?xml version="1.0" encoding="utf-8"?>

<TableLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#151514">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:weightSum="10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Alarms:"
            android:id="@+id/setAlarms_Settings"
            android:padding="10dp"
            android:textSize="30dp"
            android:textColor="@color/card_white" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:weightSum="10">


        <CheckBox
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="Enable Alarms"
            android:padding="13dp"
            android:id="@+id/alarms_CheckBox"
            android:textColor="@color/card_white"

            />


    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:weightSum="10">


        <Spinner
            android:layout_weight="10"
            android:layout_height="wrap_content"
            android:id="@+id/settings_spinner"
            android:entries="@array/country_arrays"
            android:padding="2dp"
            android:spinnerMode="dropdown" />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="10">

        <TextView
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="Waves Height (in meters)"
            android:padding="13dp"
            android:id="@+id/waves_Height_Settings_Label"
            android:textColor="@color/card_white" />

        <EditText
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="0.5"
            android:focusable="true"
            android:id="@+id/waves_Height_Settings_EditText"
            android:textColor="@color/card_white"
            android:inputType="numberDecimal" />

    </TableRow>



    <Button
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/save_settingsBTN"
        android:text="Save" />
</TableLayout>